const allPosts = await Astro.glob("../blog/*.md");
const tags = [...new Set(allPosts.map((e) => e.frontmatter.tags).flat())];
console.log(tags);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <ul>
      {
        tags.map((tag) => (
          <li>
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))
      }
    </ul>
  </body>
</html>
